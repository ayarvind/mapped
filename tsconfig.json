{
  "compilerOptions": {
    "moduleResolution": "node16",
    "typeRoots": [
      "./node_modules/@types",
    ],
    "target": "ES2020",
    "module": "Node16",
    "rootDir": "./src",
    "paths": {
      "@/*": ["src/*"]
    },
    "baseUrl": "./",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "src"
  ]
}